<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingBottom="@dimen/item_margin_16">

    <ImageView
        android:id="@+id/img_football"
        android:layout_width="@dimen/item_margin_50"
        android:layout_height="@dimen/item_margin_50"
        android:src="@drawable/img_arsenal"
        android:layout_marginRight="@dimen/item_margin_16"/>

    <TextView
        android:id="@+id/tv_football"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arsenal_fc"
        android:layout_gravity="center"
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""/>

</LinearLayout>
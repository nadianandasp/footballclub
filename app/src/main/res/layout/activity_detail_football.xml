<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFootballActivity"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_football_detai"
        android:layout_width="@dimen/item_margin_50"
        android:layout_height="@dimen/item_margin_50"
        android:src="@drawable/img_arsenal"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/item_margin_8"/>

    <TextView
        android:id="@+id/tv_football_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arsenal_fc"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/item_margin_20"/>
    
    <TextView
        android:id="@+id/tv_description_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_detail_football"
        android:layout_gravity="center"/>




</LinearLayout>